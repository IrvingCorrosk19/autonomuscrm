@page
@model AutonomusCRM.API.Pages.CustomersModel
@using AutonomusCRM.Application.Customers.Queries
@using AutonomusCRM.Domain.Customers
@{
    ViewData["Title"] = "Clientes - AUTONOMUS CRM";
}

<!-- TOPBAR -->
<header class="topbar">
  <div class="topbar-left">
    <div class="kicker">Gestión de clientes</div>
    <h2 class="headline">Análisis de riesgo y valor de vida</h2>
  </div>

  <div class="topbar-center">
    <form method="get" style="display: flex; gap: 10px; align-items: center; width: 100%;">
      <div class="search" role="search" style="flex: 1;">
        <input type="text" name="search" value="@Model.SearchTerm" placeholder="Buscar clientes por nombre, empresa, email..." aria-label="Buscar" />
      </div>
      <select name="status" style="padding: 8px; border: 1px solid rgba(255,255,255,0.1); background: var(--bg); color: var(--text); border-radius: 4px;">
        <option value="">Todos los estados</option>
        @foreach (var status in Enum.GetValues<AutonomusCRM.Domain.Customers.CustomerStatus>())
        {
          <option value="@((int)status)" selected="@(Model.FilterStatus == status)">@status</option>
        }
      </select>
      <button type="submit" class="btn" style="white-space: nowrap;">Filtrar</button>
      @if (!string.IsNullOrWhiteSpace(Model.SearchTerm) || Model.FilterStatus.HasValue)
      {
        <a href="/Customers" class="btn" style="white-space: nowrap; text-decoration: none; display: inline-block;">Limpiar</a>
      }
    </form>
  </div>

  <div class="topbar-right">
    <button class="btn mobile-toggle" type="button" onclick="toggleSidebar()">Menú</button>
    <button class="btn" type="button">Exportar</button>
    <a href="/Customers/Create" class="btn primary">Nuevo Cliente</a>
  </div>
</header>

@if (Model.Created == true)
{
  <div style="background: rgba(0, 255, 0, 0.1); border: 1px solid rgba(0, 255, 0, 0.3); padding: 15px; border-radius: 4px; margin-bottom: 20px; color: #51cf66;">
    <strong>✓ Éxito:</strong> El cliente ha sido creado correctamente.
  </div>
}

<!-- STATS -->
<section class="stats" aria-label="Métricas de clientes">
  <div class="stat">
    <div class="label">Total clientes</div>
    <div class="value">@Model.Customers.Count</div>
    <div class="hint">
      <span>Activos</span>
      <span class="delta up">@Model.Customers.Count activos</span>
    </div>
  </div>

  <div class="stat">
    <div class="label">LTV promedio</div>
    <div class="value">$ @(Model.Customers.Any() && Model.Customers.Any(c => c.LifetimeValue.HasValue) ? Model.Customers.Where(c => c.LifetimeValue.HasValue).Average(c => c.LifetimeValue!.Value).ToString("N0") : "0")</div>
    <div class="hint">
      <span>Valor de vida</span>
      <span class="delta up">@Model.Customers.Count(c => c.LifetimeValue.HasValue && c.LifetimeValue > 10000) altos</span>
    </div>
  </div>

  <div class="stat">
    <div class="label">Riesgo alto</div>
    <div class="value">@Model.Customers.Count(c => c.RiskScore.HasValue && c.RiskScore > 70)</div>
    <div class="hint">
      <span>Requieren atención</span>
      <span class="delta down">Score > 70</span>
    </div>
  </div>

  <div class="stat">
    <div class="label">Score promedio</div>
    <div class="value">@(Model.Customers.Any() && Model.Customers.Any(c => c.RiskScore.HasValue) ? Model.Customers.Where(c => c.RiskScore.HasValue).Average(c => c.RiskScore!.Value).ToString("F0") : "N/A")</div>
    <div class="hint">
      <span>Riesgo promedio</span>
      <span class="delta up">@Model.Customers.Count(c => c.RiskScore.HasValue && c.RiskScore < 30) bajos</span>
    </div>
  </div>
</section>

<section class="grid">
  <!-- LEFT: Customers Table -->
  <div class="card">
    <div class="card-h">
      <div>
        <h3 class="title">Base de clientes</h3>
        <p class="subtitle">
          Clientes con análisis de riesgo automático, valor de vida estimado y recomendaciones de retención.
        </p>
      </div>
      <span class="pill">@Model.FilteredCustomers.Count de @Model.Customers.Count registros</span>
    </div>

    <div class="card-b">
      <table class="table" aria-label="Lista de clientes">
        <thead>
          <tr>
            <th>Cliente</th>
            <th>LTV</th>
            <th>Riesgo</th>
            <th>Estado</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          @if (Model.FilteredCustomers.Any())
          {
            @foreach (var customer in Model.FilteredCustomers)
            {
              <tr>
                <td><input type="checkbox" name="customerIds" value="@customer.Id" /></td>
                <td>
                  <div style="font-weight:800; font-size:13px;">@customer.Name</div>
                  <div style="color:var(--muted); font-size:12px;">
                    @if (!string.IsNullOrEmpty(customer.Company))
                    {
                      <text>@customer.Company</text>
                    }
                    @if (!string.IsNullOrEmpty(customer.Email))
                    {
                      <text> · @customer.Email</text>
                    }
                  </div>
                </td>
                <td>
                  @if (customer.LifetimeValue.HasValue)
                  {
                    <span class="badge @(customer.LifetimeValue > 20000 ? "ok" : customer.LifetimeValue > 10000 ? "warn" : "")">$ @customer.LifetimeValue.Value.ToString("N0")</span>
                  }
                  else
                  {
                    <span class="badge">N/A</span>
                  }
                </td>
                <td>
                  @if (customer.RiskScore.HasValue)
                  {
                    <span class="badge @(customer.RiskScore < 30 ? "ok" : customer.RiskScore < 70 ? "warn" : "danger")">@(customer.RiskScore < 30 ? "Bajo" : customer.RiskScore < 70 ? "Medio" : "Alto")</span>
                  }
                  else
                  {
                    <span class="badge">N/A</span>
                  }
                </td>
                <td><span class="badge ok">@customer.Status</span></td>
                <td>
                  <a href="/Customers/Details/@customer.Id" class="btn" style="padding:6px 10px; font-size:12px; text-decoration:none; display:inline-block;">Ver</a>
                </td>
              </tr>
            }
          }
          else
          {
            <tr>
              <td colspan="5" style="text-align: center; color: rgba(255,255,255,0.5); padding: 20px;">
                @if (!string.IsNullOrWhiteSpace(Model.SearchTerm) || Model.FilterStatus.HasValue)
                {
                  <text>No se encontraron clientes con los filtros aplicados. <a href="/Customers" style="color: var(--primary);">Limpiar filtros</a></text>
                }
                else
                {
                  <text>No hay clientes registrados. <a href="/Customers/Create" style="color: var(--primary);">Crea tu primer cliente</a></text>
                }
              </td>
            </tr>
          }
        </tbody>
      </table>

      <div style="height:12px"></div>

      <div style="display:flex; gap:10px; flex-wrap:wrap;">
        <button class="btn" type="button" onclick="exportCustomers()">Exportar</button>
        <button class="btn" type="button" onclick="showBulkActionsModal()">Bulk actions</button>
        <button class="btn" type="button" onclick="alert('Funcionalidad de segmentación próximamente disponible');">Segmentar</button>
        <button class="btn primary" type="button" onclick="alert('Funcionalidad de acciones IA próximamente disponible');">Aplicar acciones IA</button>
      </div>
    </div>
  </div>

  <!-- RIGHT: Risk Analysis -->
  <aside class="stack">
    <div class="card">
      <div class="card-h">
        <div>
          <h3 class="title">Análisis de riesgo</h3>
          <p class="subtitle">Clientes identificados por la IA como de alto riesgo o alta oportunidad.</p>
        </div>
        <span class="pill">Actualizado</span>
      </div>
      <div class="card-b">
        <div class="feed">
          <div class="item">
            <div class="itop">
              <div class="itag">RIESGO</div>
              <div class="itime">Hace 10 min</div>
            </div>
            <div class="ibody">
              "Comercio DEF" muestra señales de churn: sin actividad en 45 días, score de riesgo 78.
            </div>
            <div class="ifooter">
              <span class="pill">Riesgo: Alto</span>
              <span class="pill">Acción: Retención</span>
            </div>
          </div>

          <div class="item">
            <div class="itop">
              <div class="itag">OPORTUNIDAD</div>
              <div class="itime">Hace 25 min</div>
            </div>
            <div class="ibody">
              "Empresa ABC Corp" tiene potencial de upsell: uso intensivo, satisfacción alta.
            </div>
            <div class="ifooter">
              <span class="pill">LTV: $45K</span>
              <span class="pill">Acción: Upsell</span>
            </div>
          </div>

          <div class="item">
            <div class="itop">
              <div class="itag">ALERTA</div>
              <div class="itime">Hace 1h</div>
            </div>
            <div class="ibody">
              5 clientes con pagos atrasados detectados. Recomendación: contacto inmediato.
            </div>
            <div class="ifooter">
              <span class="pill">Urgencia: Alta</span>
              <span class="pill">Acción: Cobranza</span>
            </div>
          </div>
        </div>

        <div style="height:12px"></div>

        <button class="btn primary" type="button" style="width:100%;">Ver análisis completo</button>
      </div>
    </div>

    <div class="card">
      <div class="card-h">
        <div>
          <h3 class="title">Segmentación automática</h3>
          <p class="subtitle">Clientes agrupados por la IA según comportamiento y valor.</p>
        </div>
        <span class="pill">IA Clustering</span>
      </div>
      <div class="card-b">
        <table class="table" aria-label="Segmentos de clientes">
          <thead>
            <tr>
              <th>Segmento</th>
              <th>Clientes</th>
              <th>LTV Promedio</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>Alto valor</td>
              <td>342</td>
              <td><span class="badge ok">$ 28,500</span></td>
            </tr>
            <tr>
              <td>Medio valor</td>
              <td>567</td>
              <td><span class="badge warn">$ 12,200</span></td>
            </tr>
            <tr>
              <td>Bajo valor</td>
              <td>338</td>
              <td><span class="badge">$ 4,800</span></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </aside>
</section>

<!-- CREATE CUSTOMER FORM -->
<div id="create-customer-form" style="display:none; position:fixed; top:0; left:0; right:0; bottom:0; background:rgba(0,0,0,0.8); z-index:1000; padding:40px; overflow:auto;">
  <div style="max-width:600px; margin:0 auto; background:var(--bg-card); padding:30px; border-radius:8px;">
    <h2 style="margin:0 0 20px 0;">Crear Nuevo Cliente</h2>
    <form method="post" asp-page-handler="Create">
      <div style="margin-bottom:15px;">
        <label style="display:block; margin-bottom:5px; font-weight:600;">Nombre *</label>
        <input type="text" name="name" required style="width:100%; padding:10px; border:1px solid rgba(255,255,255,0.1); background:var(--bg); color:var(--text); border-radius:4px;" />
      </div>
      <div style="margin-bottom:15px;">
        <label style="display:block; margin-bottom:5px; font-weight:600;">Email</label>
        <input type="email" name="email" style="width:100%; padding:10px; border:1px solid rgba(255,255,255,0.1); background:var(--bg); color:var(--text); border-radius:4px;" />
      </div>
      <div style="margin-bottom:15px;">
        <label style="display:block; margin-bottom:5px; font-weight:600;">Teléfono</label>
        <input type="tel" name="phone" style="width:100%; padding:10px; border:1px solid rgba(255,255,255,0.1); background:var(--bg); color:var(--text); border-radius:4px;" />
      </div>
      <div style="margin-bottom:20px;">
        <label style="display:block; margin-bottom:5px; font-weight:600;">Empresa</label>
        <input type="text" name="company" style="width:100%; padding:10px; border:1px solid rgba(255,255,255,0.1); background:var(--bg); color:var(--text); border-radius:4px;" />
      </div>
      <div style="display:flex; gap:10px;">
        <button type="submit" class="btn primary" style="flex:1;">Crear Cliente</button>
        <button type="button" class="btn" onclick="document.getElementById('create-customer-form').style.display='none'" style="flex:1;">Cancelar</button>
      </div>
    </form>
  </div>
</div>

<div style="height:14px"></div>

<footer style="color:rgba(255,255,255,0.55); font-size:12px; padding:8px 2px;">
  AUTONOMUS CRM · Gestión inteligente de clientes con análisis predictivo.
</footer>

<script>
function exportCustomers() {
    const customers = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Customers.Select(c => new { c.Id, c.Name, c.Email, c.Phone, c.Company, Status = c.Status.ToString(), c.LifetimeValue, c.RiskScore, CreatedAt = c.CreatedAt.ToString("yyyy-MM-dd HH:mm") })));
    const json = JSON.stringify(customers, null, 2);
    const blob = new Blob([json], { type: 'application/json' });
    const url = URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = 'customers-' + new Date().toISOString().split('T')[0] + '.json';
    a.click();
    URL.revokeObjectURL(url);
}
</script>

