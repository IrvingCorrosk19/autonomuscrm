@page
@model AutonomusCRM.API.Pages.AuditModel
@{
    ViewData["Title"] = "Auditoría - AUTONOMUS CRM";
}

<!-- TOPBAR -->
<header class="topbar">
  <div class="topbar-left">
    <div class="kicker">Auditoría y trazabilidad</div>
    <h2 class="headline">Registro inmutable de todas las acciones</h2>
  </div>

  <div class="topbar-center">
    <form method="get" style="display: flex; gap: 10px; align-items: center;">
      <select name="eventType" style="padding: 8px; border: 1px solid rgba(255,255,255,0.1); background: var(--bg); color: var(--text); border-radius: 4px;">
        <option value="">Todos los eventos</option>
        @foreach (var eventType in Model.EventTypes)
        {
          <option value="@eventType.Value" selected="@eventType.Selected">@eventType.Text</option>
        }
      </select>
      <input type="date" name="from" value="@Model.FilterFrom?.ToString("yyyy-MM-dd")" placeholder="Desde" style="padding: 8px; border: 1px solid rgba(255,255,255,0.1); background: var(--bg); color: var(--text); border-radius: 4px;" />
      <input type="date" name="to" value="@Model.FilterTo?.ToString("yyyy-MM-dd")" placeholder="Hasta" style="padding: 8px; border: 1px solid rgba(255,255,255,0.1); background: var(--bg); color: var(--text); border-radius: 4px;" />
      <button type="submit" class="btn" style="white-space: nowrap;">Filtrar</button>
    </form>
  </div>

  <div class="topbar-right">
    <button class="btn mobile-toggle" type="button" onclick="toggleSidebar()">Menú</button>
    <form method="post" asp-page-handler="Export" style="display: inline;">
      <button type="submit" class="btn">Exportar</button>
    </form>
    <button class="btn primary" type="button" onclick="alert('Generación de reportes próximamente disponible');">Generar reporte</button>
  </div>
</header>

<!-- STATS -->
<section class="stats" aria-label="Métricas de auditoría">
  <div class="stat">
    <div class="label">Eventos registrados</div>
    <div class="value">124,847</div>
    <div class="hint">
      <span>Total histórico</span>
      <span class="delta up">+1,247</span>
    </div>
  </div>

  <div class="stat">
    <div class="label">Eventos hoy</div>
    <div class="value">1,247</div>
    <div class="hint">
      <span>Últimas 24h</span>
      <span class="delta up">+18%</span>
    </div>
  </div>

  <div class="stat">
    <div class="label">Decisiones IA</div>
    <div class="value">342</div>
    <div class="hint">
      <span>Auditadas</span>
      <span class="delta up">+45</span>
    </div>
  </div>

  <div class="stat">
    <div class="label">Trazabilidad</div>
    <div class="value">100%</div>
    <div class="hint">
      <span>Completa</span>
      <span class="delta ok">✓</span>
    </div>
  </div>
</section>

<section class="grid">
  <!-- LEFT: Audit Log -->
  <div class="card">
    <div class="card-h">
      <div>
        <h3 class="title">Registro de auditoría</h3>
        <p class="subtitle">
          Historial completo e inmutable de todas las acciones, decisiones y eventos del sistema.
        </p>
      </div>
      <span class="pill">Event Sourcing</span>
    </div>

    <div class="card-b">
      <table class="table" aria-label="Registro de auditoría">
        <thead>
          <tr>
            <th>Timestamp</th>
            <th>Evento</th>
            <th>Usuario/Agente</th>
            <th>Entidad</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          @if (Model.Events.Any())
          {
            @foreach (var evt in Model.Events.OrderByDescending(e => e.OccurredOn).Take(100))
            {
              <tr>
                <td>@evt.OccurredOn.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>
                  <div style="font-weight:800; font-size:13px;">@evt.EventType</div>
                  <div style="color:var(--muted); font-size:12px;">ID: @evt.Id.ToString().Substring(0, 8)...</div>
                </td>
                <td>
                  @if (evt.CorrelationId.HasValue)
                  {
                    <span class="pill">@evt.CorrelationId.Value.ToString().Substring(0, 8)...</span>
                  }
                  else
                  {
                    <span class="pill">System</span>
                  }
                </td>
                <td><span class="badge">@evt.TenantId.ToString().Substring(0, 8)...</span></td>
                <td>
                  <button class="btn" type="button" style="padding:6px 10px; font-size:12px;" onclick="showEventDetails('@evt.Id', '@evt.EventType', '@evt.OccurredOn', '@System.Text.Json.JsonSerializer.Serialize(evt).Replace("'", "\\'")');">Ver</button>
                </td>
              </tr>
            }
          }
          else
          {
            <tr>
              <td colspan="5" style="text-align: center; color: rgba(255,255,255,0.5); padding: 20px;">
                No hay eventos de auditoría registrados aún.
              </td>
            </tr>
          }
          <tr>
            <td>2025-01-15 14:30:18</td>
            <td>
              <div style="font-weight:800; font-size:13px;">CustomerRiskUpdated</div>
              <div style="color:var(--muted); font-size:12px;">Riesgo: 78 (Alto)</div>
            </td>
            <td><span class="pill">CustomerRiskAgent</span></td>
            <td><span class="badge">Customer</span></td>
            <td>
              <button class="btn" type="button" style="padding:6px 10px; font-size:12px;" onclick="alert('Detalles del evento:\n\nCustomerRiskUpdated\n\nLa funcionalidad completa de auditoría estará disponible próximamente.');">Ver</button>
            </td>
          </tr>
        </tbody>
      </table>

      <div style="height:12px"></div>

      <div style="display:flex; gap:10px; flex-wrap:wrap;">
        <button class="btn" type="button">Exportar</button>
        <button class="btn" type="button">Filtrar</button>
        <button class="btn primary" type="button">Generar reporte</button>
      </div>
    </div>
  </div>

  <!-- RIGHT: Event Details -->
  <aside class="stack">
    <div class="card">
      <div class="card-h">
        <div>
          <h3 class="title">Eventos por tipo</h3>
          <p class="subtitle">Distribución de eventos registrados en el sistema.</p>
        </div>
        <span class="pill">Últimos 7 días</span>
      </div>
      <div class="card-b">
        <table class="table" aria-label="Eventos por tipo">
          <thead>
            <tr>
              <th>Tipo de evento</th>
              <th>Cantidad</th>
              <th>Tendencia</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>Domain Events</td>
              <td>8,247</td>
              <td><span class="badge ok">+12%</span></td>
            </tr>
            <tr>
              <td>Decisiones IA</td>
              <td>2,342</td>
              <td><span class="badge ok">+18%</span></td>
            </tr>
            <tr>
              <td>Acciones de usuario</td>
              <td>1,156</td>
              <td><span class="badge warn">+5%</span></td>
            </tr>
            <tr>
              <td>Workflow executions</td>
              <td>12,847</td>
              <td><span class="badge ok">+22%</span></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <div class="card">
      <div class="card-h">
        <div>
          <h3 class="title">Trazabilidad completa</h3>
          <p class="subtitle">Cada acción puede ser reconstruida y explicada.</p>
        </div>
        <span class="pill">Event Sourcing</span>
      </div>
      <div class="card-b">
        <div class="feed">
          <div class="item">
            <div class="itop">
              <div class="itag">INFO</div>
              <div class="itime">Sistema</div>
            </div>
            <div class="ibody">
              Todos los eventos se almacenan de forma inmutable. El estado completo del sistema puede reconstruirse desde cero.
            </div>
            <div class="ifooter">
              <span class="pill">Event Store</span>
              <span class="pill">Snapshots</span>
            </div>
          </div>
        </div>

        <div style="height:12px"></div>

        <button class="btn primary" type="button" style="width:100%;">Ver documentación</button>
      </div>
    </div>
  </aside>
</section>

<div style="height:14px"></div>

<footer style="color:rgba(255,255,255,0.55); font-size:12px; padding:8px 2px;">
  AUTONOMUS CRM · Auditoría completa con Event Sourcing y trazabilidad absoluta.
</footer>

<div id="eventDetailsModal" style="display: none; position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.7); z-index: 1000; align-items: center; justify-content: center;">
    <div class="card" style="max-width: 700px; margin: auto; position: relative; top: 50%; transform: translateY(-50%); max-height: 80vh; overflow-y: auto;">
        <div class="card-h">
            <div>
                <h3 class="title" id="eventDetailsTitle">Detalles del Evento</h3>
            </div>
        </div>
        <div class="card-b">
            <div id="eventDetailsContent" style="font-family: monospace; font-size: 12px; white-space: pre-wrap; word-wrap: break-word;"></div>
            <div style="margin-top: 15px;">
                <button type="button" class="btn" onclick="closeEventDetailsModal()" style="width: 100%;">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<script>
function showEventDetails(id, eventType, occurredOn, eventData) {
    document.getElementById('eventDetailsTitle').textContent = eventType;
    try {
        const data = JSON.parse(eventData);
        document.getElementById('eventDetailsContent').textContent = JSON.stringify(data, null, 2);
    } catch {
        document.getElementById('eventDetailsContent').textContent = eventData;
    }
    document.getElementById('eventDetailsModal').style.display = 'flex';
}
function closeEventDetailsModal() {
    document.getElementById('eventDetailsModal').style.display = 'none';
}
</script>

