@page
@model AutonomusCRM.API.Pages.LeadsModel
@using AutonomusCRM.Application.Leads.Queries
@using AutonomusCRM.Domain.Leads
@{
    ViewData["Title"] = "Leads - AUTONOMUS CRM";
}

<!-- TOPBAR -->
<header class="topbar">
  <div class="topbar-left">
    <div class="kicker">Gestión de leads</div>
    <h2 class="headline">Inteligencia y calificación automática</h2>
  </div>

  <div class="topbar-center">
    <form method="get" style="display: flex; gap: 10px; align-items: center; width: 100%;">
      <div class="search" role="search" style="flex: 1;">
        <input type="text" name="search" value="@Model.SearchTerm" placeholder="Buscar leads por nombre, empresa, email..." aria-label="Buscar" />
      </div>
      <select name="status" style="padding: 8px; border: 1px solid rgba(255,255,255,0.1); background: var(--bg); color: var(--text); border-radius: 4px;">
        <option value="">Todos los estados</option>
        @foreach (var status in Enum.GetValues<LeadStatus>())
        {
          <option value="@((int)status)" selected="@(Model.FilterStatus == status)">@status</option>
        }
      </select>
      <select name="source" style="padding: 8px; border: 1px solid rgba(255,255,255,0.1); background: var(--bg); color: var(--text); border-radius: 4px;">
        <option value="">Todas las fuentes</option>
        @foreach (var source in Enum.GetValues<LeadSource>())
        {
          <option value="@((int)source)" selected="@(Model.FilterSource == source)">@source</option>
        }
      </select>
      <button type="submit" class="btn" style="white-space: nowrap;">Filtrar</button>
      @if (!string.IsNullOrWhiteSpace(Model.SearchTerm) || Model.FilterStatus.HasValue || Model.FilterSource.HasValue)
      {
        <a href="/Leads" class="btn" style="white-space: nowrap; text-decoration: none; display: inline-block;">Limpiar</a>
      }
    </form>
  </div>

  <div class="topbar-right">
    <button class="btn mobile-toggle" type="button" onclick="toggleSidebar()">Menú</button>
    <button class="btn" type="button">Importar</button>
    <a href="/Leads/Create" class="btn primary">Nuevo Lead</a>
  </div>
</header>

@if (Model.Created == true)
{
  <div style="background: rgba(0, 255, 0, 0.1); border: 1px solid rgba(0, 255, 0, 0.3); padding: 15px; border-radius: 4px; margin-bottom: 20px; color: #51cf66;">
    <strong>✓ Éxito:</strong> El lead ha sido creado correctamente.
  </div>
}

@if (TempData["Message"] != null)
{
  <div style="background: rgba(0, 255, 0, 0.1); border: 1px solid rgba(0, 255, 0, 0.3); padding: 15px; border-radius: 4px; margin-bottom: 20px; color: #51cf66;">
    <strong>✓ Éxito:</strong> @TempData["Message"]
  </div>
}

<!-- STATS -->
<section class="stats" aria-label="Métricas de leads">
  <div class="stat">
    <div class="label">Total leads</div>
    <div class="value">@Model.Leads.Count</div>
    <div class="hint">
      <span>Activos</span>
      <span class="delta up">@Model.Leads.Count(l => l.Status == LeadStatus.Qualified) calificados</span>
    </div>
  </div>

  <div class="stat">
    <div class="label">Score promedio</div>
    <div class="value">@(Model.Leads.Any() ? Model.Leads.Where(l => l.Score.HasValue).Any() ? Model.Leads.Where(l => l.Score.HasValue).Average(l => l.Score!.Value).ToString("F0") : "N/A" : "0")</div>
    <div class="hint">
      <span>Calificación IA</span>
      <span class="delta up">@Model.Leads.Count(l => l.Score.HasValue && l.Score > 70) altos</span>
    </div>
  </div>

  <div class="stat">
    <div class="label">Conversión</div>
    <div class="value">@(Model.Leads.Any() ? (Model.Leads.Count(l => l.Status == LeadStatus.Qualified) * 100.0 / Model.Leads.Count).ToString("F1") : "0")%</div>
    <div class="hint">
      <span>Calificados / Total</span>
      <span class="delta up">@Model.Leads.Count(l => l.Status == LeadStatus.Qualified) calificados</span>
    </div>
  </div>

  <div class="stat">
    <div class="label">Pendientes</div>
    <div class="value">@Model.Leads.Count(l => l.Status == LeadStatus.New)</div>
    <div class="hint">
      <span>Requieren acción</span>
      <span class="delta down">Nuevos</span>
    </div>
  </div>
</section>

<section class="grid">
  <!-- LEFT: Leads Table -->
  <div class="card">
    <div class="card-h">
      <div>
        <h3 class="title">Leads activos</h3>
        <p class="subtitle">
          Lista completa de leads con scoring automático, estado de calificación y recomendaciones de la IA.
        </p>
      </div>
      <span class="pill">@Model.FilteredLeads.Count de @Model.Leads.Count registros</span>
    </div>

    <div class="card-b">
      <table class="table" aria-label="Lista de leads">
        <thead>
          <tr>
            <th style="width: 40px;"><input type="checkbox" id="selectAll" onclick="toggleSelectAll()" /></th>
            <th>Lead</th>
            <th>Score</th>
            <th>Estado</th>
            <th>Recomendación IA</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          @if (Model.FilteredLeads.Any())
          {
            @foreach (var lead in Model.FilteredLeads)
            {
              <tr>
                <td><input type="checkbox" name="leadIds" value="@lead.Id" /></td>
                <td>
                  <div style="font-weight:800; font-size:13px;">@lead.Name</div>
                  <div style="color:var(--muted); font-size:12px;">
                    @if (!string.IsNullOrEmpty(lead.Company))
                    {
                      <text>@lead.Company</text>
                    }
                    @if (!string.IsNullOrEmpty(lead.Email))
                    {
                      <text> · @lead.Email</text>
                    }
                  </div>
                </td>
                <td>
                  @if (lead.Score.HasValue)
                  {
                    <span class="badge @(lead.Score >= 70 ? "ok" : lead.Score >= 50 ? "warn" : "danger")">@lead.Score</span>
                  }
                  else
                  {
                    <span class="badge">N/A</span>
                  }
                </td>
                <td><span class="badge">@lead.Status</span></td>
                <td>
                  <span class="pill">
                    @switch (lead.Status)
                    {
                      case LeadStatus.New:
                        <text>Calificar</text>
                        break;
                      case LeadStatus.Qualified:
                        <text>Enviar propuesta</text>
                        break;
                      case LeadStatus.Contacted:
                        <text>Seguimiento</text>
                        break;
                      default:
                        <text>Revisar</text>
                        break;
                    }
                  </span>
                </td>
                <td>
                  <a href="/Leads/Details/@lead.Id" class="btn" style="padding:6px 10px; font-size:12px; text-decoration:none; display:inline-block;">Ver</a>
                </td>
              </tr>
            }
          }
          else
          {
            <tr>
              <td colspan="5" style="text-align: center; color: rgba(255,255,255,0.5); padding: 20px;">
                @if (!string.IsNullOrWhiteSpace(Model.SearchTerm) || Model.FilterStatus.HasValue || Model.FilterSource.HasValue)
                {
                  <text>No se encontraron leads con los filtros aplicados. <a href="/Leads" style="color: var(--primary);">Limpiar filtros</a></text>
                }
                else
                {
                  <text>No hay leads registrados. <a href="/Leads/Create" style="color: var(--primary);">Crea tu primer lead</a></text>
                }
              </td>
            </tr>
          }
        </tbody>
      </table>

      <div style="height:12px"></div>

      <div style="display:flex; gap:10px; flex-wrap:wrap;">
        <button class="btn" type="button" onclick="exportLeads()">Exportar</button>
        <button class="btn primary" type="button" onclick="alert('Funcionalidad de aprobación IA próximamente disponible');">Aprobar acciones IA</button>
      </div>
    </div>
  </div>

  <!-- RIGHT: AI Insights -->
  <aside class="stack">
    <div class="card">
      <div class="card-h">
        <div>
          <h3 class="title">Insights de IA</h3>
          <p class="subtitle">Análisis automático y recomendaciones para optimizar la conversión.</p>
        </div>
        <span class="pill">Actualizado</span>
      </div>
      <div class="card-b">
        <div class="feed">
          <div class="item">
            <div class="itop">
              <div class="itag">OPORTUNIDAD</div>
              <div class="itime">Hace 5 min</div>
            </div>
            <div class="ibody">
              12 leads de alto valor detectados. Recomendación: priorizar contacto inmediato.
            </div>
            <div class="ifooter">
              <span class="pill">Score: 80+</span>
              <span class="pill">Impacto: Alto</span>
            </div>
          </div>

          <div class="item">
            <div class="itop">
              <div class="itag">ALERTA</div>
              <div class="itime">Hace 12 min</div>
            </div>
            <div class="ibody">
              8 leads sin seguimiento en 48h. Riesgo de pérdida de conversión.
            </div>
            <div class="ifooter">
              <span class="pill">Urgencia: Media</span>
              <span class="pill">Acción: Recordatorio</span>
            </div>
          </div>

          <div class="item">
            <div class="itop">
              <div class="itag">OPTIMIZACIÓN</div>
              <div class="itime">Hace 1h</div>
            </div>
            <div class="ibody">
              Patrón detectado: leads de sector tecnológico tienen 35% más conversión.
            </div>
            <div class="ifooter">
              <span class="pill">Confianza: 0.89</span>
              <span class="pill">Sector: Tech</span>
            </div>
          </div>
        </div>

        <div style="height:12px"></div>

        <div style="display:flex; gap:10px; flex-wrap:wrap;">
          <button class="btn" type="button">Ver análisis completo</button>
          <button class="btn primary" type="button">Aplicar recomendaciones</button>
        </div>
      </div>
    </div>

    <div class="card">
      <div class="card-h">
        <div>
          <h3 class="title">Distribución por fuente</h3>
          <p class="subtitle">Origen de los leads y tasa de conversión por canal.</p>
        </div>
        <span class="pill">Últimos 30 días</span>
      </div>
      <div class="card-b">
        <table class="table" aria-label="Fuentes de leads">
          <thead>
            <tr>
              <th>Fuente</th>
              <th>Cantidad</th>
              <th>Conversión</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>Web</td>
              <td>142</td>
              <td><span class="badge ok">22%</span></td>
            </tr>
            <tr>
              <td>Email</td>
              <td>89</td>
              <td><span class="badge ok">18%</span></td>
            </tr>
            <tr>
              <td>Referido</td>
              <td>67</td>
              <td><span class="badge ok">28%</span></td>
            </tr>
            <tr>
              <td>Redes sociales</td>
              <td>44</td>
              <td><span class="badge warn">12%</span></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </aside>
</section>

<!-- CREATE LEAD FORM -->
<div id="create-lead-form" style="display:none; position:fixed; top:0; left:0; right:0; bottom:0; background:rgba(0,0,0,0.8); z-index:1000; padding:40px; overflow:auto;">
  <div style="max-width:600px; margin:0 auto; background:var(--bg-card); padding:30px; border-radius:8px;">
    <h2 style="margin:0 0 20px 0;">Crear Nuevo Lead</h2>
    <form method="post" asp-page-handler="Create">
      <div style="margin-bottom:15px;">
        <label style="display:block; margin-bottom:5px; font-weight:600;">Nombre *</label>
        <input type="text" name="name" required style="width:100%; padding:10px; border:1px solid rgba(255,255,255,0.1); background:var(--bg); color:var(--text); border-radius:4px;" />
      </div>
      <div style="margin-bottom:15px;">
        <label style="display:block; margin-bottom:5px; font-weight:600;">Email</label>
        <input type="email" name="email" style="width:100%; padding:10px; border:1px solid rgba(255,255,255,0.1); background:var(--bg); color:var(--text); border-radius:4px;" />
      </div>
      <div style="margin-bottom:15px;">
        <label style="display:block; margin-bottom:5px; font-weight:600;">Teléfono</label>
        <input type="tel" name="phone" style="width:100%; padding:10px; border:1px solid rgba(255,255,255,0.1); background:var(--bg); color:var(--text); border-radius:4px;" />
      </div>
      <div style="margin-bottom:15px;">
        <label style="display:block; margin-bottom:5px; font-weight:600;">Empresa</label>
        <input type="text" name="company" style="width:100%; padding:10px; border:1px solid rgba(255,255,255,0.1); background:var(--bg); color:var(--text); border-radius:4px;" />
      </div>
      <div style="margin-bottom:20px;">
        <label style="display:block; margin-bottom:5px; font-weight:600;">Fuente *</label>
        <select name="source" required style="width:100%; padding:10px; border:1px solid rgba(255,255,255,0.1); background:var(--bg); color:var(--text); border-radius:4px;">
          <option value="Web">Web</option>
          <option value="Email">Email</option>
          <option value="Referral">Referido</option>
          <option value="SocialMedia">Redes Sociales</option>
          <option value="Other">Otro</option>
        </select>
      </div>
      <div style="display:flex; gap:10px;">
        <button type="submit" class="btn primary" style="flex:1;">Crear Lead</button>
        <button type="button" class="btn" onclick="document.getElementById('create-lead-form').style.display='none'" style="flex:1;">Cancelar</button>
      </div>
    </form>
  </div>
</div>

<div style="height:14px"></div>

<footer style="color:rgba(255,255,255,0.55); font-size:12px; padding:8px 2px;">
  AUTONOMUS CRM · Gestión inteligente de leads con IA autónoma.
</footer>

<script>
function exportLeads() {
    const leads = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.FilteredLeads.Select(l => new { l.Id, l.Name, l.Email, l.Phone, l.Company, Source = l.Source.ToString(), Status = l.Status.ToString(), l.Score, CreatedAt = l.CreatedAt.ToString("yyyy-MM-dd HH:mm") })));
    const json = JSON.stringify(leads, null, 2);
    const blob = new Blob([json], { type: 'application/json' });
    const url = URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = 'leads-' + new Date().toISOString().split('T')[0] + '.json';
    a.click();
    URL.revokeObjectURL(url);
}
function showBulkActionsModal() {
    const selected = Array.from(document.querySelectorAll('input[type="checkbox"][name="leadIds"]:checked')).map(cb => cb.value);
    if (selected.length === 0) {
        alert('Por favor selecciona al menos un lead');
        return;
    }
    document.getElementById('bulkActionsModal').style.display = 'flex';
    document.getElementById('selectedLeadIds').value = selected.join(',');
}
function closeBulkActionsModal() {
    document.getElementById('bulkActionsModal').style.display = 'none';
}
function toggleSelectAll() {
    const selectAll = document.getElementById('selectAll');
    const checkboxes = document.querySelectorAll('input[type="checkbox"][name="leadIds"]');
    checkboxes.forEach(cb => cb.checked = selectAll.checked);
}
function showImportModal() {
    document.getElementById('importModal').style.display = 'flex';
}
function closeImportModal() {
    document.getElementById('importModal').style.display = 'none';
}
</script>

<div id="importModal" style="display: none; position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.7); z-index: 1000; align-items: center; justify-content: center;">
    <div class="card" style="max-width: 500px; margin: auto; position: relative; top: 50%; transform: translateY(-50%);">
        <div class="card-h">
            <div>
                <h3 class="title">Importar Leads</h3>
            </div>
        </div>
        <div class="card-b">
            <form method="post" action="/Leads/Import" enctype="multipart/form-data">
                <div style="margin-bottom: 15px;">
                    <label style="display: block; margin-bottom: 5px; font-weight: 600;">Archivo JSON o CSV *</label>
                    <input type="file" name="file" accept=".json,.csv" required style="width: 100%; padding: 10px; border: 1px solid rgba(255,255,255,0.1); background: var(--bg); color: var(--text); border-radius: 4px;" />
                    <div style="margin-top: 5px; font-size: 12px; color: var(--muted);">
                        Formato CSV: Name,Email,Phone,Company,Source<br/>
                        Formato JSON: Array de objetos con name, email, phone, company, source
                    </div>
                </div>
                <div style="display: flex; gap: 10px;">
                    <button type="submit" class="btn primary" style="flex: 1;">Importar</button>
                    <button type="button" class="btn" onclick="closeImportModal()" style="flex: 1;">Cancelar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div id="bulkActionsModal" style="display: none; position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.7); z-index: 1000; align-items: center; justify-content: center;">
    <div class="card" style="max-width: 500px; margin: auto; position: relative; top: 50%; transform: translateY(-50%);">
        <div class="card-h">
            <div>
                <h3 class="title">Acciones Masivas</h3>
            </div>
        </div>
        <div class="card-b">
            <form method="post" action="/Leads/BulkActions">
                <input type="hidden" id="selectedLeadIds" name="leadIds" />
                <input type="hidden" name="action" value="updateStatus" />
                <div style="margin-bottom: 15px;">
                    <label style="display: block; margin-bottom: 5px; font-weight: 600;">Cambiar estado a *</label>
                    <select name="status" required style="width: 100%; padding: 10px; border: 1px solid rgba(255,255,255,0.1); background: var(--bg); color: var(--text); border-radius: 4px;">
                        @foreach (var status in Enum.GetValues<AutonomusCRM.Domain.Leads.LeadStatus>())
                        {
                            <option value="@status">@status</option>
                        }
                    </select>
                </div>
                <div style="display: flex; gap: 10px;">
                    <button type="submit" class="btn primary" style="flex: 1;">Aplicar</button>
                    <button type="button" class="btn" onclick="closeBulkActionsModal()" style="flex: 1;">Cancelar</button>
                </div>
            </form>
        </div>
    </div>
</div>

