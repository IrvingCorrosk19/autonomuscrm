@page "/Deals/Edit/{id:guid}"
@model AutonomusCRM.API.Pages.Deals.EditModel
@using AutonomusCRM.Domain.Deals
@{
    ViewData["Title"] = "Editar Deal - AUTONOMUS CRM";
}

@if (Model.Deal == null)
{
    <div style="padding: 40px; text-align: center;">
        <h2>Deal no encontrado</h2>
        <p>El deal que buscas no existe o ha sido eliminado.</p>
        <a href="/Deals" class="btn primary">Volver a Deals</a>
    </div>
}
else
{
    <!-- TOPBAR -->
    <header class="topbar">
        <div class="topbar-left">
            <div class="kicker">Editar deal</div>
            <h2 class="headline">@Model.Deal.Title</h2>
        </div>

        <div class="topbar-right">
            <button class="btn mobile-toggle" type="button" onclick="toggleSidebar()">Menú</button>
            <a href="/Deals/Details/@Model.Deal.Id" class="btn">Cancelar</a>
        </div>
    </header>

    <section class="grid">
        <div class="card" style="max-width: 800px; margin: 0 auto;">
            <div class="card-h">
                <div>
                    <h3 class="title">Información del deal</h3>
                    <p class="subtitle">Actualiza la información del deal.</p>
                </div>
            </div>

            <div class="card-b">
                <form method="post">
                    <div style="margin-bottom: 20px;">
                        <label style="display: block; margin-bottom: 8px; font-weight: 600;">Título *</label>
                        <input type="text" name="title" value="@Model.Deal.Title" required 
                               style="width: 100%; padding: 12px; border: 1px solid rgba(255,255,255,0.1); background: var(--bg); color: var(--text); border-radius: 4px;" />
                    </div>

                    <div style="margin-bottom: 20px;">
                        <label style="display: block; margin-bottom: 8px; font-weight: 600;">Cliente</label>
                        <select name="customerId" 
                                style="width: 100%; padding: 12px; border: 1px solid rgba(255,255,255,0.1); background: var(--bg); color: var(--text); border-radius: 4px;">
                            <option value="">Sin cambiar</option>
                            @foreach (var customer in Model.Customers)
                            {
                                <option value="@customer.Id" selected="@(customer.Id == Model.Deal.CustomerId)">@customer.Name @(!string.IsNullOrEmpty(customer.Company) ? $"({customer.Company})" : "")</option>
                            }
                        </select>
                    </div>

                    <div style="margin-bottom: 20px;">
                        <label style="display: block; margin-bottom: 8px; font-weight: 600;">Monto</label>
                        <input type="number" name="amount" value="@Model.Deal.Amount" step="0.01" min="0" 
                               style="width: 100%; padding: 12px; border: 1px solid rgba(255,255,255,0.1); background: var(--bg); color: var(--text); border-radius: 4px;" />
                    </div>

                    <div style="margin-bottom: 20px;">
                        <label style="display: block; margin-bottom: 8px; font-weight: 600;">Descripción</label>
                        <textarea name="description" rows="4" 
                                  style="width: 100%; padding: 12px; border: 1px solid rgba(255,255,255,0.1); background: var(--bg); color: var(--text); border-radius: 4px;"></textarea>
                    </div>

                    <div style="margin-bottom: 20px;">
                        <label style="display: block; margin-bottom: 8px; font-weight: 600;">Etapa</label>
                        <select name="stage" 
                                style="width: 100%; padding: 12px; border: 1px solid rgba(255,255,255,0.1); background: var(--bg); color: var(--text); border-radius: 4px;">
                            <option value="">Sin cambiar</option>
                            @foreach (var stage in Model.Stages)
                            {
                                <option value="@stage.Value" selected="@stage.Selected">@stage.Text</option>
                            }
                        </select>
                    </div>

                    <div style="margin-bottom: 20px;">
                        <label style="display: block; margin-bottom: 8px; font-weight: 600;">Probabilidad (%)</label>
                        <input type="number" name="probability" value="@Model.Deal.Probability" min="0" max="100" 
                               style="width: 100%; padding: 12px; border: 1px solid rgba(255,255,255,0.1); background: var(--bg); color: var(--text); border-radius: 4px;" />
                    </div>

                    <div style="margin-bottom: 20px;">
                        <label style="display: block; margin-bottom: 8px; font-weight: 600;">Fecha de cierre esperada</label>
                        <input type="date" name="expectedCloseDate" value="@(Model.Deal.ExpectedCloseDate?.ToString("yyyy-MM-dd"))" 
                               style="width: 100%; padding: 12px; border: 1px solid rgba(255,255,255,0.1); background: var(--bg); color: var(--text); border-radius: 4px;" />
                    </div>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div style="background: rgba(255, 0, 0, 0.1); border: 1px solid rgba(255, 0, 0, 0.3); padding: 15px; border-radius: 4px; margin-bottom: 20px; color: #ff6b6b;">
                            <strong>Errores:</strong>
                            <ul style="margin: 10px 0 0 0; padding-left: 20px;">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    }

                    <div style="display: flex; gap: 10px; margin-top: 30px;">
                        <button type="submit" class="btn primary" style="flex: 1;">Guardar cambios</button>
                        <a href="/Deals/Details/@Model.Deal.Id" class="btn" style="flex: 1; text-align: center; text-decoration: none; display: inline-block;">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </section>
}

<div style="height:14px"></div>

<footer style="color:rgba(255,255,255,0.55); font-size:12px; padding:8px 2px;">
    AUTONOMUS CRM · Editar deal.
</footer>

