@page "/Customers/Edit/{id:guid}"
@model AutonomusCRM.API.Pages.Customers.EditModel
@using AutonomusCRM.Domain.Customers
@{
    ViewData["Title"] = "Editar Cliente - AUTONOMUS CRM";
}

@if (Model.Customer == null)
{
    <div style="padding: 40px; text-align: center;">
        <h2>Cliente no encontrado</h2>
        <p>El cliente que buscas no existe o ha sido eliminado.</p>
        <a href="/Customers" class="btn primary">Volver a Clientes</a>
    </div>
}
else
{
    <!-- TOPBAR -->
    <header class="topbar">
        <div class="topbar-left">
            <div class="kicker">Editar cliente</div>
            <h2 class="headline">@Model.Customer.Name</h2>
        </div>

        <div class="topbar-right">
            <button class="btn mobile-toggle" type="button" onclick="toggleSidebar()">Menú</button>
            <a href="/Customers/Details/@Model.Customer.Id" class="btn">Cancelar</a>
        </div>
    </header>

    <section class="grid">
        <div class="card" style="max-width: 800px; margin: 0 auto;">
            <div class="card-h">
                <div>
                    <h3 class="title">Información del cliente</h3>
                    <p class="subtitle">Actualiza la información del cliente.</p>
                </div>
            </div>

            <div class="card-b">
                <form method="post">
                    <div style="margin-bottom: 20px;">
                        <label style="display: block; margin-bottom: 8px; font-weight: 600;">Nombre *</label>
                        <input type="text" name="name" value="@Model.Customer.Name" required 
                               style="width: 100%; padding: 12px; border: 1px solid rgba(255,255,255,0.1); background: var(--bg); color: var(--text); border-radius: 4px;" />
                    </div>

                    <div style="margin-bottom: 20px;">
                        <label style="display: block; margin-bottom: 8px; font-weight: 600;">Email</label>
                        <input type="email" name="email" value="@Model.Customer.Email" 
                               style="width: 100%; padding: 12px; border: 1px solid rgba(255,255,255,0.1); background: var(--bg); color: var(--text); border-radius: 4px;" />
                    </div>

                    <div style="margin-bottom: 20px;">
                        <label style="display: block; margin-bottom: 8px; font-weight: 600;">Teléfono</label>
                        <input type="tel" name="phone" value="@Model.Customer.Phone" 
                               style="width: 100%; padding: 12px; border: 1px solid rgba(255,255,255,0.1); background: var(--bg); color: var(--text); border-radius: 4px;" />
                    </div>

                    <div style="margin-bottom: 20px;">
                        <label style="display: block; margin-bottom: 8px; font-weight: 600;">Empresa</label>
                        <input type="text" name="company" value="@Model.Customer.Company" 
                               style="width: 100%; padding: 12px; border: 1px solid rgba(255,255,255,0.1); background: var(--bg); color: var(--text); border-radius: 4px;" />
                    </div>

                    <div style="margin-bottom: 20px;">
                        <label style="display: block; margin-bottom: 8px; font-weight: 600;">Estado</label>
                        <select name="status" 
                                style="width: 100%; padding: 12px; border: 1px solid rgba(255,255,255,0.1); background: var(--bg); color: var(--text); border-radius: 4px;">
                            <option value="">Sin cambiar</option>
                            @foreach (var status in Model.Statuses)
                            {
                                <option value="@status.Value" selected="@status.Selected">@status.Text</option>
                            }
                        </select>
                    </div>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div style="background: rgba(255, 0, 0, 0.1); border: 1px solid rgba(255, 0, 0, 0.3); padding: 15px; border-radius: 4px; margin-bottom: 20px; color: #ff6b6b;">
                            <strong>Errores:</strong>
                            <ul style="margin: 10px 0 0 0; padding-left: 20px;">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    }

                    <div style="display: flex; gap: 10px; margin-top: 30px;">
                        <button type="submit" class="btn primary" style="flex: 1;">Guardar cambios</button>
                        <a href="/Customers/Details/@Model.Customer.Id" class="btn" style="flex: 1; text-align: center; text-decoration: none; display: inline-block;">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </section>
}

<div style="height:14px"></div>

<footer style="color:rgba(255,255,255,0.55); font-size:12px; padding:8px 2px;">
    AUTONOMUS CRM · Editar cliente.
</footer>

